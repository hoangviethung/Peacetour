	// MENU TOP
	.top-header
		.container.h-100
			.row.no-gutters.ai-c.h-100
				// MENU TOP
				ul.nav-menu-top
					li.item-menu-top
						a.link-menu-top(href="gioi-thieu.html") Giới thiệu
					li.item-menu-top
						a.link-menu-top(href="tin-tuc.html") Tin tức
					li.item-menu-top
						a.link-menu-top(href="lien-he.html") Liên hệ
					li.item-menu-top
						a.link-menu-top(href="thu-vien.html") Thư viện
				// ĐƯỜNG DÂY NÓNG
				.hot-line
					.icon
						img(src="./assets/icons/phone-menu-top.png" alt="HOT-LINE")
					.text Hotline
				// ĐĂNG KÝ - ĐĂNG NHẬP
				.user-login
					.icon
						img(src="./assets/icons/user-menu-top.png" alt="LOGIN")
					.text Tài khoản
				// NGÔN NGỮ
				.language
					ul.list-language
						li.item.active(data-language="vi")
							img.lazyload.blur-up(data-src="./assets/icons/vi.png" alt="VIET-NAM")
						li.item(data-language="en")
							img.lazyload.blur-up(data-src="./assets/icons/en.png" alt="ENGLISH")
						li.item(data-language="jp")
							img.lazyload.blur-up(data-src="./assets/icons/jp.png" alt="JAPAN")
						li.item(data-language="fr")
							img.lazyload.blur-up(data-src="./assets/icons/fr.png" alt="FRANCE")
